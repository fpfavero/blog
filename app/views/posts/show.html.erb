<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
	<p>
		<b>Commenter:</b>
		<% comment.commenter %>
	</p>

	<p>
		<b>Comment:</b>
		<% comment.body %>
	</p>
<%end%>


<h2> Add a Comment: </h2>
<%= simple_form_for ([@post, @post.comments.build]) do |f| %>
<div class="form-input">
	<%= f.input :commenter %>
</div>

<div class="form-input">
	<%= f.input :body, input_html: { rows:5 } %>
</div>
<div class="form-actions">
	<%= f.button :submit %>
</div>
<%end%>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back do Posts', posts_path %>
